{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "CMake Build",
         "type": "shell",
         "command": "cmake --build build --config Debug",
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "problemMatcher": [
            "$gcc"
         ],
         "detail": "Build the Hunger Game project using CMake"
      },
      {
         "label": "Run Hunger Game",
         "type": "shell",
         "command": "${workspaceFolder}/build/Debug/hunger.exe",
         "group": {
            "kind": "test",
            "isDefault": true
         },
         "dependsOn": "CMake Build",
         "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
         }
      }
   ]
}